<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a7b90"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".SettingsFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sherwin Guevarra" />

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textViewName"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+639123456789" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/about" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="67dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="About"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/settings" />

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAbout"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/fingerprint" />

    <TextView
        android:id="@+id/textViewFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSettings"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="47dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Fingerprint Login"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/faqs" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/route" />

    <TextView
        android:id="@+id/textViewFaqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFingerprint"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="FAQs"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFaqs"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Transaction History"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/logout"
        android:fontFamily="@font/montserrat_bold"
        android:text="LOG OUT"
        android:textColor="@color/white"
        android:textSize="15sp" />




</RelativeLayout>