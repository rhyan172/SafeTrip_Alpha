<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a7b90"
    tools:context=".LogInWelcome">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Welcome Back," />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textView5"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Enter your 4-digit PIN" />

    <EditText
        android:id="@+id/logPinOne"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:maxLength="1"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/logPinTwo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="125dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:maxLength="1"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/logPinThree"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="205dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:maxLength="1"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/logPinFour"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="280dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:maxLength="1"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@null"
        android:inputType="numberPassword" />

    <ImageView
        android:id="@+id/finger"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/logPinFour"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        app:srcCompat="@drawable/fingerprint" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textSize="12sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Log In Touch ID" />

</RelativeLayout>