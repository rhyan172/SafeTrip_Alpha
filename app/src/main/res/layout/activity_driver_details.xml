<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a7b90"
    tools:context=".DriverDetails">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Driver"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/rounded_box" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/textView3"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/driver" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Name: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNameDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Juan Dela Cruz "
        android:textSize="20sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_below="@id/txtNameDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Phone Number: "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNumDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="09123456789 "
        android:textSize="20sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_below="@id/txtNumDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNumDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Points Earned:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtPointsDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="100"
        android:textSize="20sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_below="@id/txtPointsDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPointsDriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Total Income:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtTotalDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="100.00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-18dp"
        android:layout_alignLeft="@id/txtTotalDriver"
        android:fontFamily="@font/montserrat_bold"
        android:text="â‚±"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logoutDriverBtn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logout"
        android:fontFamily="@font/montserrat_bold"
        android:text="LOG OUT"
        android:textColor="@color/white"
        android:textSize="15sp" />



</RelativeLayout>