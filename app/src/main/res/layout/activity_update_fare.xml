<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a7b90"
    tools:context=".UpdateFare">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="UPDATE FARE and POINTS"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editFare"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Update Fare"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editFare"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/text_main"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="15.00"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="#7f7f7f" />

    <Button
        android:id="@+id/updateFareBtn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editFare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editPoints"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Update Points"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editPoints"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_below="@id/updateFareBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/text_main"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="100"
        android:paddingLeft="20dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="#7f7f7f" />

    <Button
        android:id="@+id/updatePointsBtn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPoints"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>